<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.indiastouristguide.North">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/northgoa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/goa_back">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/shanta"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/shanta" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/blue_box"
                            android:alpha="0.8">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shanta Durga Temple"
                                android:textAlignment="center"
                                android:textAppearance="@style/Theme.AppCompat.Light.DarkActionBar"
                                android:textColor="@color/colorEdit"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bird"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/bird" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/pink_box"
                            android:alpha="0.8">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr.Salim Ali Bird Sanctuary"
                                android:textAlignment="center"
                                android:textAppearance="@style/Theme.AppCompat.Light.DarkActionBar"
                                android:textColor="@color/colorEdit"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/museum"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/museum" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_blue_box"
                            android:alpha="0.8">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goa State Museum"
                                android:textAlignment="center"
                                android:textAppearance="@style/Theme.AppCompat.Light.DarkActionBar"
                                android:textColor="@color/colorEdit"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/cathedral"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/se" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/green_box"
                            android:alpha="0.8">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Se Cathedral"
                                android:textAlignment="center"
                                android:textAppearance="@style/Theme.AppCompat.Light.DarkActionBar"
                                android:textColor="@color/colorEdit"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/beach"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/chopra" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/red_box"
                            android:alpha="0.8">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chapora Beach"
                                android:textAlignment="center"
                                android:textAppearance="@style/Theme.AppCompat.Light.DarkActionBar"
                                android:textColor="@color/colorEdit"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
